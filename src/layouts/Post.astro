---
import Base from './Base.astro';
const { frontmatter } = Astro.props
---

<Base {frontmatter}>
    <article class="container max-w-5xl mx-auto">
        <h1>{frontmatter.title}</h1>
        <div class="flex gap-12 -mt-4 mb-4">
            <p class="text-gray-300"><i class="fas fa-user text-white mr-3" /> {frontmatter.author}</p>
            <p class="text-gray-300"><i class="fas fa-calendar text-white mr-3" /> {frontmatter.date}</p>
            <p class="text-gray-300"><i class="fas fa-layer-group text-white mr-3" />{frontmatter.category.join(', ')}</p>
            <p class="text-gray-300"><i class="fas fa-tag text-white mr-3" />{frontmatter.tag.join(', ')}</p>
        </div>
        <div class="text-justify">
            <slot />
        </div>
    </article>
</Base>
